}

.movies-template {
  margin-bottom: 20rpx;
}

.search {
  background-color: azure;
  height: 80rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
}

.search-image {
  margin: auto 0 auto 20rpx;
}

