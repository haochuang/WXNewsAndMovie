/**welcome.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

page{
  height: 100%;
  background-color: #b3d4db;
}

.userinfo {
  display: flex; /**弹性**/
  flex-direction: column; /**列排布**/
  align-items: center;  /**居中**/
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
  font-size: 32rpx;
  margin-top: 20px;
}

.usermotto {
  margin-top: 200px;
  font-size: 24rpx;
  border: 1px solid #405f80;
  width:200rpx;
  height:50rpx;
  border-radius: 10rpx;
  text-align: center
  
}

.user-motto{
  line-height: 50rpx;
}